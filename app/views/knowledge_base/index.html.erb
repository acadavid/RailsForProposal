<% title "Base de conocimiento" %>

<table>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:company) %></th>
    <th><%= t(:score) %></th>
    <th><%= t(:feedback) %></th>
  </tr>
  <% for request in @requests %>
    <tr>
      <td><%= request.name %></td>
      <td><%= request.company %></td>
      <td><%= "%0.2f" % request.average %></td>
      <td><%= request.feedback %></td>
      <td><%= link_to "Ver detalles RFP", request %></td>
      <td><%= link_to "Descargar Archivo", "/upload/rfp/#{request.filename}" %></td>
      <td><%= link_to "Eliminar", request, :confirm => '¿Está
      seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

