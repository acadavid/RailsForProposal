<% title "RFP" %>

<div id="general-info">
  <div id="rfp-info">
    <h2><%= @request.name %></h2>
    <ul>
      <li><strong>Estado: </strong><%= if (@request.status == 'pending') then 'Pendiente' end %></li>
      <li><strong>Fecha de inicio: </strong><%= @request.start_date %></li>
      <li><strong>Fecha de decisión: </strong><%= @request.decision_date %></li>
	  <li><strong>Tiempo restante: </strong><%= (@request.decision_date) - (Date.current) %> días</li>
      <li><strong>Puntaje: </strong><%= @request.average %></li>
    </ul>    
  </div>
  <div id="responsibles">
    <strong>Responsables</strong>
    <ul>
      <% for section_role in @request.section_roles %>
        <li><%= section_role.user.full_name %>(<em><%= section_role.request_section.section.name %></em>)</li>
      <% end -%>
    </ul>
    <%= link_to "Agregar responsable", new_request_section_role_path(@request) %>
  </div>
  <div id="sections">
    <strong>Secciones</strong>
    <ul>
      <% for request_section in @request.request_sections %>
        <li><%= request_section.section.name %><%= link_to "Agregar items", request_request_section_path(@request, request_section) %></li>
      <% end -%>
    </ul>
    <%= link_to "Agregar sección", new_request_request_section_path(@request) %>
  </div>
</div>

<div id="status">
  <div id="accept">
    
  </div>
  <div id="reject">
    
  </div>
</div>


<p>
  <%= link_to "Editar", edit_request_path(@request) %> |
  <%= link_to "Eliminar", @request, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "Volver", requests_path %>
</p>
