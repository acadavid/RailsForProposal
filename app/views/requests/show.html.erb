<% title "Request" %>

<div id="general-info">
  <div id="rfp-info">
    <h2><%= @request.name %></h2>
    <ul>
      <li><strong>Status: </strong><%= @request.status %></li>
      <li><strong>Start date: </strong><%= @request.start_date %></li>
      <li><strong>Decision date: </strong><%= @request.decision_date %></li>
      <li><strong>Average: </strong><%= @request.average %></li>
    </ul>    
  </div>
  <div id="responsibles">
    <strong>Responsables</strong>
    <ul>
      <% for user in @request.users %>
        <li><%= user.full_name %></li>
      <% end -%>
    </ul>
    <%= link_to "Agregar responsable", new_request_section_role_path(@request) %>
  </div>
  <div id="sections">
    <strong>Secciones</strong>
    <ul>
      <% for request_section in @request.request_sections %>
        <li><%= request_section.section.name %><%= link_to "Agregar item", new_request_request_section_section_item_path(@request, request_section) %></li>
      <% end -%>
    </ul>
