<%= semantic_form_for [@request, @request_section] do |form| %>
	<%= form.inputs do %>
	  <%= form.input :request_id, :as => :hidden %>
		<%= form.input :section, :label => t(:section) %>
	<% end -%>
	<%= form.buttons do  %>
		<%= form.commit_button :label => "Agregar Seccion" %>
	<% end %>

<% end -%>
