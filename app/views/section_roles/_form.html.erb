<%= semantic_form_for [@request, @section_role] do |form| %>
  <%= form.inputs do %>
    <%= form.input :user, :label => t(:user) %>
    <%= form.input :request_section_id, :label => t(:section), :as => :select, :collection => @sections %>
  <% end -%>
  <%= form.buttons do  %>
	<%= form.commit_button :label => "Agregar Responsable" %>
  <% end %>
<% end -%>
